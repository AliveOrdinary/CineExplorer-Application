@model CineExplorer.Models.Movie

@{
    ViewBag.Title = "Edit Movie";
}

<h2>Edit Movie</h2>
<h4>Movie Details</h4>

<div class="row">
    <div class="col-md-6">
        <form action="/Movie/Edit/@Model.MovieId" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input type="text" name="Name" class="form-control" value="@Model.Name" required />
            </div>

            <div class="form-group">
                <label for="ReleaseYear" class="control-label">Release Year</label>
                <input type="number" name="ReleaseYear" class="form-control" value="@Model.ReleaseYear" min="1900" max="2099" step="1" />
            </div>

            <div class="form-group">
                <label for="Description" class="control-label">Description</label>
                <textarea name="Description" class="form-control" rows="4">@Model.Description</textarea>
            </div>

            <div class="form-group">
                <label for="ImageFile" class="control-label">Image</label>
                <input type="file" name="ImageFile" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.ImageURL))
                {
                    <div class="mt-2">
                        <img src="@Model.ImageURL" alt="Current Image" class="img-fluid" style="max-width: 200px;" />
                    </div>
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Movie/Index" class="btn btn-secondary">Back to List</a>
</div>