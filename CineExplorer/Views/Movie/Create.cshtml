@model CineExplorer.Models.Movie
@{
    ViewBag.Title = "Create Movie";
}

<h2>Create Movie</h2>
<h4>Movie</h4>
<div class="row">
    <div class="col-md-4">
        <form action="/Movie/Create" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input name="Name" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="ReleaseYear" class="control-label">Release Year</label>
                <input name="ReleaseYear" type="number" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Description" class="control-label">Description</label>
                <textarea name="Description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label for="ImageFile" class="control-label">Image</label>
                <input type="file" name="ImageFile" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a href="/Movie/Index">Back to List</a>
</div>