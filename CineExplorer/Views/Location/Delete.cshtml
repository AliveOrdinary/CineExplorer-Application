@model CineExplorer.Models.Location

@{
    ViewBag.Title = "Delete Location";
}

<h2>Delete Location</h2>

<h3>Are you sure you want to delete this?</h3>

<div class="row">
    <div class="col-md-6">
        <h4>Location Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">City</dt>
            <dd class="col-sm-8">@Model.City</dd>

            <dt class="col-sm-4">Country</dt>
            <dd class="col-sm-8">@Model.Country</dd>
        </dl>

        @if (!string.IsNullOrEmpty(Model.ImageURL))
        {
            <div class="mb-3">
                <img src="@Model.ImageURL" alt="Location Image" class="img-fluid" style="max-width: 200px;" />
            </div>
        }

        <form action="@Url.Action("Delete", "Location", new { id = Model.LocationId })" method="POST">
            @Html.AntiForgeryToken()
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Index", "Location")" class="btn btn-secondary">Back to List</a>
</div>