@model CineExplorer.Models.Movie
@{
    ViewBag.Title = "Movie Details";
}

<h2>@Model.Name</h2>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Release Year</dt>
        <dd>@Model.ReleaseYear</dd>
        <dt>Description</dt>
        <dd>@Model.Description</dd>
    </dl>
</div>

<h3>Filming Locations</h3>
<ul>
    @foreach (var location in Model.Locations)
    {
        <li>@Html.ActionLink(location.Name, "Details", "Location", new { id = location.LocationId }, null)</li>
    }
</ul>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MovieId }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</p>