@model CineExplorer.Models.Movie

@{
    ViewBag.Title = "Edit Movie";
}

<h2>Edit Movie</h2>

<div class="row">
    <div class="col-md-4">
        <form action="/Movie/Update/@Model.MovieId" method="PUT">
            <div class="form-group">
                <input type="hidden" name="MovieId" value="@Model.MovieId" />
                <label for="Name" class="control-label">Name</label>
                <input name="Name" class="form-control" value="@Model.Name" />
            </div>
            <div class="form-group">
                <label for="ReleaseYear" class="control-label">ReleaseYear</label>
                <input name="ReleaseYear" class="form-control" value="@Model.ReleaseYear" />
            </div>
            <div class="form-group">
                <label for="Description" class="control-label">Description</label>
                <input name="Description" class="form-control" value="@Model.Description" />
            </div>
            <div class="form-group">
                <label for="ImageURL" class="control-label">ImageURL</label>
                <input name="ImageURL" class="form-control" value="@Model.ImageURL" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</div>